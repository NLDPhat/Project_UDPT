<div class="container">
	<div class="col-sm-6 col-sm-offset-3">
		<h1 class="jumbtron text-center"><label>Login</label></h1>
		<% if (message.lenght>0){ %>
		<div class="alert alert-danger"><%= message %></div>
		<%} %>
	<form action="/login_local" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" placeholder="Enter email"></input>
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password" placeholder="Enter password"></input>
		</div>
		<button type="submit" class="btn btn-default"> Login</button>
	</form>
	<hr>
	<p>Need an account?<a href="/signup">Signup</a> Or go <a href="/">home</a>.</p>
	</div>
</div>

